{
  "template": {
    "aliases": {
      "__SEARCH_INDEX_PREFIX__records": {}
    },
    "mappings": {
      "properties": {
        "$schema": {
          "copy_to": "facet_schema",
          "type": "text"
        },
        "_created": {
          "type": "date"
        },
        "_updated": {
          "type": "date"
        },
        "accelerator": {
          "type": "keyword"
        },
        "availability": {
          "type": "keyword"
        },
        "date_created": {
          "type": "date"
        },
        "date_published": {
          "type": "date"
        },
        "experiment": {
          "type": "keyword"
        },
        "facet_schema": {
          "index": true,
          "type": "text"
        },
        "query": {
          "type": "percolator"
        },
        "recid": {
          "type": "keyword"
        },
        "title": {
          "fields": {
            "tokens": {
              "type": "text"
            }
          },
          "type": "keyword"
        },
        "type": {
          "properties": {
            "primary": {
              "type": "keyword",
              "fields": {
                "primary_text": {
                  "type":"text"
                }
              }
            },
            "secondary": {
              "type": "keyword",
              "fields": {
                "secondary_text": {
                  "type":"text"
                }
              }
            }
          }
        }
      }
    },
    "settings": {
      "number_of_replicas": 1
    }
  }
}
